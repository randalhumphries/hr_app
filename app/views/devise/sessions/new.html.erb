<div class="row">
  <div class="col col-lg-6 col-sm-offset-3">
    <div class="panel">
      <div class="panel-head">
        <h2 class="panel-title">HR App Log In</h2>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-control">
            <%= f.label :email %><br />
            <%= f.text_field :email, autofocus: true, required: true, autocomplete: "email" %>
          </div>

          <div class="form-control">
            <%= f.label :password %><br />
            <%= f.password_field :password, required: true, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-control">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>